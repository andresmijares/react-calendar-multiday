{
  "presets": [
    ["env", {
      "targets": {
        "browsers": ["last 2 versions", "safari >= 7"]
      }
    }],
    ["es2015", {"modules": false}],
    "stage-0",
    "react"
  ],
  "env": {
    "test" : {
      "plugins":[
        ["module-resolver", {
          "root": ["./app"]
        }],
        "transform-es2015-modules-commonjs",
        "transform-runtime"
      ]
    },
    "development": {
      "plugins": ["transform-runtime"],
      "presets": [
        "react-hmre"
      ]
    },
    "production": {
      "plugins": [
        "transform-runtime",
        "transform-react-constant-elements",
        "transform-react-remove-prop-types"
      ]
    }
  }
}
